{
    "name": "tm-project-list",
    "version": "0.0.0",
    "description": "Web component for showcasing projects",
    "author": "tm-radial-tree",
    "homepage": "https://tmcmaster.github.io/tm-project-list/",
    "license": "MIT",
    "repository": "https://github.com/tmcmaster/tm-project-list/",
    "pika": true,
    "sideEffects": true,
    "@pika/pack": {
        "pipeline": [
            [
                "@pika/plugin-standard-pkg",
                {
                    "exclude": [
                        "__tests__/**/*"
                    ]
                }
            ],
            [
                "@pika/plugin-build-node"
            ],
            [
                "@pika/plugin-build-web"
            ]
        ]
    },
    "scripts": {
        "build": "pika build",
        "version": "npm run build",
        "publish": "pika publish",
        "dev:status": "git status && npm run release:status && npm run site:status",
        "dev:clean": "npm run release:clean && npm run site:clean",
        "dev:build": "npm run release:build && npm run site:build",
        "dev:pika": "npx @pika/web",
        "dev:checkout": "npm run release:checkout && npm run site:checkout",
        "dev:refresh": "npm run release:refresh && npm run site:refresh",
        "dev:rebuild": "npm run release:rebuild && npm run site:rebuild",
        "site:dev": "owc-dev-server",
        "site:test": "owc-dev-server --open /demo",
        "site:serve": "http-server dist/site -c-1",
        "site:status": "cd dist/site && git status",
        "site:clean": "rimraf dist/site",
        "site:checkout": "git clone -b gh-pages git@github.com:tmcmaster/tm-project-list.git dist/site",
        "site:refresh": "npm run site:clean && npm run site:checkout",
        "site:build": "rollup -c rollup-site.config.js && cp demo/index.html dist/site/",
        "site:rebuild": "npm run site:refresh && npm run site:build",
        "release:status": "cd dist/release && git status",
        "release:clean": "rimraf dist/release",
        "release:checkout": "git clone -b release git@github.com:tmcmaster/tm-project-list.git dist/release",
        "release:refresh": "npm run release:clean && npm run release:checkout",
        "release:build": "rollup -c rollup-release.config.js",
        "release:rebuild": "npm run release:refresh && npm run release:build"
    },
    "dependencies": {
        "@material/card": "^3.2.0",
        "@pika/types": "^0.6.1",
        "lit-element": "^2.0.1",
        "lit-html": "^1.0.0",
        "material-components-web": "^3.2.0"
    },
    "devDependencies": {
        "@pika/plugin-build-node": "^0.6.1",
        "@pika/plugin-build-types": "^0.6.1",
        "@pika/plugin-build-web": "^0.6.1",
        "@pika/plugin-standard-pkg": "^0.6.1",
        "@open-wc/building-rollup": "^0.3.0",
        "@open-wc/demoing-storybook": "^0.2.0",
        "http-server": "^0.11.1",
        "owc-dev-server": "^0.3.0",
        "rimraf": "^2.6.3",
        "rollup": "^1.6.0",
        "rollup-plugin-css-bundle": "^1.0.4"
    }
}
